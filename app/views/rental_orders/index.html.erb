<%- model_class = RentalOrder -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:group_name) %></th>
      <th><%= model_class.human_attribute_name(:rental_item_name) %></th>
      <th><%= model_class.human_attribute_name(:num) %></th>
      <th><%=t '.action', :default => t("helpers.action") %></th>
    </tr>
  </thead>
  <tbody>
    <% @rental_orders.each do |rental_order| %>
        <% if rental_order.rental_item.is_rentable %>
          <tr>
            <td><%= rental_order.group.name%></td>
            <td><%= rental_order.rental_item.name_ja %></td>
            <td><%= rental_order.num %></td>
            <td>
              <%= show_edit_botton(edit_rental_order_path(rental_order), rental_order) %>
            </td>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to t('.back', :default => t("helpers.links.back")),
              welcome_index_path, :class => 'btn btn-default'  %>
